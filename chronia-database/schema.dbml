
Table user_profile {
  id integer [primary key]
  forename varchar
  surname varchar
  email varchar
  role varchar [note: 'e.g., employee, manager, admin']
  department_id integer
  manager_id integer
  scheduled_hours_per_week decimal [note: 'Scheduled hours per week']
  holiday_allowance decimal [note: 'Allocated holiday hours for the year']
  created_at timestamp
  updated_at timestamp
}

Table department {
  id integer [primary key]
  name varchar
  created_at timestamp
}

Table clock_entry {
  id integer [primary key]
  user_id integer
  clock_in timestamp
  clock_out timestamp
  hours_worked decimal [note: 'Total hours worked for this clock-in session']
  created_at timestamp
}

Table holiday_booking {
  id integer [primary key]
  user_id integer
  start_date date
  end_date date
  total_hours decimal [note: 'Total holiday hours requested']
  status varchar [note: 'pending, approved, rejected']
  created_at timestamp
}

// Relationships
Ref: user_profile.department_id > department.id // many-to-one
Ref: user_profile.manager_id > user_profile.id // many-to-one
Ref: clock_entry.user_id > user_profile.id // many-to-one
Ref: holiday_booking.user_id > user_profile.id // many-to-one

